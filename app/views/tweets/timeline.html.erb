<div class = "contents row">


<TABLE BORDER="1" WIDTH="600" CELLSPACING="0" CELLPADDING="0"> 

<% @tweets.each do |tweet| %>

<tr>

<th>
   <ul class="more_list">
   <li>
      <%= link_to 'Detail', "/tweets/#{tweet.id}", method: :get %>
    </li>
    <% if user_signed_in? && current_user.id ==tweet.user_id %>
     <li>
      <%= link_to 'Edit', "/tweets/#{tweet.id}/edit", method: :get %>
    </li>
    <li>
      <%= link_to 'Delete', "/tweets/#{tweet.id}", method: :delete %>
    </li>
  </ul>
  <% end %>
</th>

<th>
<%= tweet.user.name %>
  </th><<th>

<%= tweet.place %>
</th><th>
<%= tweet.day %>
</th><th>
<%= tweet.message %>
</th>
 </tr>
<% end %>

  </table>

<br>
<%= paginate(@tweets) %>
</div>
