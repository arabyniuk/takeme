
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false&language=en"></script>


<div class = "contents row">
  <div class="col-lg-12">
    <%= form_for current_user,
    :html => { :multipart => true } do |f| %>

    <h3>Profile Picture</h3>
      <div class="form-group file">

     <!--  <%= image_tag current_user.image.url if current_user.image.present? %> 
      <%= f.label :image %> 
      <br /> -->
      
      <%= f.file_field :image %>
      </div>

      <h3>Information</h3>
      <div class="form-group">
        <div class="col-lg-6">
        First Name:
        <%= f.text_field :first_name %>
        <br>
        Last Name:
        <%= f.text_field :last_name %>
        <br>

        
        Sex:
        <%= f.select :sex, ['male', 'female','Not specified'],  :include_blank => true %>
<br><br>

        Birthday (YYYY/MM/DD):
        <%= f.text_field :birthday %>
         <!-- 
        <%= f.select :birth_month, [['January',1],'February','Marth','April','May','June','July','August','September','October','November','December'] %>
        <%= f.select :birth_day, 1..31 %>
        <%= f.select :birth_year, (Time.zone.now.year - 120)..(Time.zone.now.year) ,:selected=>(Time.zone.now.year - 25) %>
        -->
       
      </div>

      <div class="form-group">
        <%= f.submit "SEND" %>
      </div>
    <% end %>
  </div>
</div>
